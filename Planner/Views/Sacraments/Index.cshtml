@model Planner.Models.SacramentSpeakerViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Sacraments</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Sacraments" asp-action="Index" method="get">
    <p>
        <select asp-for="sacramentSpeaker" asp-items="Model.firstspeaker">
            <option value="">All</option>
        </select>

        Conducting: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].SacramentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].Conducting)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].OpeningHymn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].Invocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].SacramentHymn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].FirstSpeaker)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].SecondSpeaker)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].RestHymn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].ThirdSpeaker)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].Convocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].ClosingHymn)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.sacraments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conducting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstSpeaker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondSpeaker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThirdSpeaker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Convocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingHymn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
