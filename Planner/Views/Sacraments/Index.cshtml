@model Planner.Models.SacramentSpeakerViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Sacraments</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Sacraments" asp-action="Index" method="get">
    <p>
        <select asp-for="SacramentSpeaker" asp-items="Model.speakers">
            <option value="">All</option>
        </select>

        Conducting: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].SacramentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].Conducting)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].Hymns)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].Prayer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].Speakers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sacraments[0].Subject)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.sacraments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conducting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hymns)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speakers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
